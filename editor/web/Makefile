# ────────────────────────────────────────────────────────────────────────────
# BeemFlow Editor Web Frontend
# ────────────────────────────────────────────────────────────────────────────

.PHONY: install dev build clean

# Install dependencies
install:
	npm install

# Development server
dev: install
	npm run dev

# Production build
build: install
	npm run build

# Clean build artifacts
clean:
	rm -rf node_modules dist